{
	"apiVersion": 2,
	"name": "prc-block/promo",
	"category": "marketing",
	"attributes": {
		"heading": {
			"type": "string",
			"source": "html",
            "selector": ".heading"
		},
		"headingLevel": {
			"type": "integer",
			"default": 2
		},
		"subHeading": {
			"type": "string",
			"source": "html",
            "selector": ".sub-heading"
		},
		"hasDarkBackground": {
			"type": "boolean",
			"default": false
		},
		"backgroundColor": {
			"type": "string",
			"default": "transparent"
		},
		"borderColor": {
			"type": "string",
			"default": "transparent"
		},
		"icon": {
			"type": "string",
			"default": "weekly"
		},
		"hasForm": {
			"type": "boolean",
			"default": false
		}
    },
	"styles": [
		{
			"name": "standard",
			"label": "Standard",
			"isDefault": true
		},
		{
			"name": "asymmetrical",
			"label": "Asymmetrical"
		}
	],
	"providesContext": {
		"prc-block/hasDarkBackground": "hasDarkBackground"
	},
	"supports": {
		"html": false,
		"align": ["full"]
	}
}
