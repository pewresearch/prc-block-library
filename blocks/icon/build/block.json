{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "prc-block/icon",
  "version": "0.1.0",
  "title": "Icon",
  "category": "design",
  "description": "Renders a Font Awesome icon.",
  "attributes": {
    "size": {
      "type": "number",
      "default": "1"
    },
    "library": {
      "type": "string",
      "default": "solid"
    },
    "icon": {
      "type": "string",
      "default": "star"
    }
  },
  "supports": {
    "anchor": true,
    "html": false,
    "spacing": {
      "blockGap": true,
      "margin": [
        "top",
        "bottom"
      ],
      "padding": true,
      "__experimentalDefaultControls": {
        "padding": true
      }
    },
    "color": {
      "background": true,
      "text": true,
      "link": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "__experimentalDefaultControls": {
        "fontSize": true
      }
    }
  },
  "textdomain": "icon",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}