{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "prc-block/related-posts-query",
	"version": "0.1.0",
	"title": "Related Posts Query",
	"category": "design",
	"description": "Display custom related posts defaulting to posts with the same primary taxonomy term.",
	"keywords": [ "related posts" ],
	"attributes": {
		"taxonomy": {
			"type": "string"
		},
		"postType": {
			"type": "string",
			"default": "post"
		},
		"perPage": {
			"type": "number",
			"default": 5
		},
		"queryId": {
			"type": "string",
			"default": "related-posts-0"
		},
		"allowedBlocks": {
			"type": "array"
		},
		"orientation": {
			"type": "string",
			"default": "vertical"
		}
	},
	"supports": {
		"anchor": true,
		"html": false,
		"align": [ "wide", "full", "left", "right", "center" ],
		"spacing": {
			"blockGap": true,
			"margin": [ "top", "bottom" ],
			"padding": true,
			"__experimentalDefaultControls": {
				"padding": true
			}
		},
		"typography": {
			"fontSize": true,
			"__experimentalFontFamily": true,
			"__experimentalDefaultControls": {
				"fontSize": true,
				"__experimentalFontFamily": true
			}
		}
	},
	"textdomain": "related-posts-query",
	"editorScript": "file:./index.js",
	"render": "file:./render.php"
}
