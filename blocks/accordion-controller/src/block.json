{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "prc-block/accordion-controller",
	"version": "0.1.0",
	"title": "Accordion Controller",
	"category": "design",
	"description": "Controls a group of accordion blocks.",
	"attributes": {
		"titleBackgroundColor": {
			"type": "string"
		},
		"titleTextColor": {
			"type": "string"
		},
		"contentBackgroundColor": {
			"type": "string"
		},
		"contentTextColor": {
			"type": "string"
		},
		"borderColor": {
			"type": "string",
			"default": "gray-light"
		}
	},
	"supports": {
		"anchor": true,
		"html": false,
		"spacing": {
			"margin": [ "top", "bottom" ]
		},
		"typography": {
			"fontSize": true,
			"__experimentalFontFamily": true,
			"__experimentalDefaultControls": {
				"fontSize": true,
				"__experimentalFontFamily": true
			}
		}
	},
	"example": {
		"attributes": {},
		"innerBlocks": [
			{
				"name": "prc-block/accordion",
				"attributes": {
					"title": "Accordion 1"
				},
				"innerBlocks": [
					{
						"name": "core/paragraph",
						"attributes": {
							"content": "Content 1"
						}
					}
				]
			},
			{
				"name": "prc-block/accordion",
				"attributes": {
					"title": "Accordion 2"
				},
				"innerBlocks": [
					{
						"name": "core/paragraph",
						"attributes": {
							"content": "Content 2"
						}
					}
				]
			}
		],
		"viewportWidth": 640
	},
	"textdomain": "accordion-controller",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js"
}
