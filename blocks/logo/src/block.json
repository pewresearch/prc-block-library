{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "prc-block/logo",
    "version": "0.1.0",
    "title": "Pew Research Center Logo",
    "description": "Contextually aware logo that has dark mode support, and will change to the alternate position logo in smaller containers. (#dark-mode, #css-container-queries)",
    "category": "theme",
	"keywords": ["logo", "masthead", "dark-mode", "css-container-queries"],
	"attributes": {
		"justification": {
			"type": "string",
			"enum": ["left", "center", "right"],
			"default": "left"
		},
		"width": {
			"type": "number",
			"default": 360
		}
	},
    "supports": {
        "html": false,
		"color": {
			"background": true,
			"gradients": true
		},
        "spacing": {
            "padding": true,
			"margin": true
        }
    },
	"styles": [
		{
			"name": "default",
			"label": "Default (Dark Mode Aware)",
			"isDefault": true
		},
		{
			"name": "no-dark-mode",
			"label": "Default (Dark Mode Ignored)"
		},
		{
			"name": "alt-only",
			"label": "Alternate Layout"
		}
	],
	"example": {},
    "usesContext": ["postType", "postId", "queryId"],
    "textdomain": "pewresearch-logo",
    "editorScript": "file:./index.js",
	"style": "file:./style-index.css",
    "render": "file:./render.php"
}
